<!DOCTYPE html>
<html>
<head>
    <% include ../partials/header.ejs %>
</head>

<body>


<div class="container">
    <h4 class="tac">详细信息</h4>
    <table class="table table-striped table-hover table-bordered">
        <thead>
        <tr>
            <th>序号</th>
            <th>分数</th>
            <th>详情</th>
        </tr>
        </thead>
        <tbody>
        <% person.arr.forEach(function(value, index, arr) { %>
        <tr>
            <td><%= index+1 %></td>
            <td><%= value.amount %>元</td>
            <td><%= value.reason%></td>
        </tr>
        <% }) %>
        </tbody>
    </table>

</div>

</body>
<script>
    var username = <%= JSON.stringify(person.arr) %>;
    console.log(username);
</script>
</html>